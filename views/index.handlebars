<div class="row">
    <div class="col-md-6>
        <ul>
            {{#each burger}}
                {{#unless this.devoured}}
                    <li>
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    {{this.id}}. {{this.burger_name}}
                                </div>
                            </div>
                            <div class="col-sm-2"
                                <input type="hidden" name="devoured" value="true">
                                <input id="btnDevour" type="button" class="btn btn-danger" value="Devour It">
                            </div>
                        </form>
                    </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-md-offset-6 col-md-6">
		<table class="table table-striped table-bordered">
			{{#each burger}}
				{{#if this.devoured}}
					<tr>
						<td>
							{{this.id}}. {{this.burger_name}}
						</td>
					</tr>
				{{/if}}
			{{/each}}
		</table>
	</div>
</div>

<div class="row">
    <div class="col-md-offset-3 col-md-6 col-xs-12">
        <h2>Eat da Burger</h2>
        <br><br>
        <form action="/" method="POST">
	        <textarea type="text" name="burger_name" id="name"></textarea>
            <br>
	        <button type="submit" id="submit">Submit</button>
        </form>
    </div>
</div>







