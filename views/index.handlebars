<div class='row'>
    <div class='col-md-3'>
        <ul class-'list-group'>
            {{#each burger}}
                {{#unless this.devoured}}
                    <li class='list-group-item list-group-item-success'>
                         {{this.id}}. {{this.burger_name}}
                        <form action="/{{this.id}}?_method=PUT" method="POST">
                            <input type="hidden" name="devoured" value="true">
                            <button type="submit" class="btn btn-basic" id="btn-devour">Devour It</button>
                        </form>
                    </li>
                {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-md-offset-3 col-md-5">
        <ul class-'list-group'>
            {{#each burger}}
                {{#if this.devoured}}
                    <li class='list-group-item list-group-item-success'>
                         {{this.id}}. {{this.burger_name}}
                        <form action="/{{this.id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="id" value="{{this.id}}">
                            <button type="submit" class="btn btn-basic" id="btn-devour">Delete It</button>
                        </form>
                    </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
    

<div class="row">
    <div class="col-md-offset-4 col-md-8">
        <br><br>
        <form action="/" method="POST">
	        <textarea type="text" name="burger_name" id="name" ></textarea>
	        <button type="submit" class="btn btn-default" id="submit">Submit</button>
        </form>
            {{>textarea}}
    </div>
</div>







